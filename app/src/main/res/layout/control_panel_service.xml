<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/control_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:background="@drawable/draw_control_panel">

<!--        <Button-->
<!--            android:visibility="gone"-->
<!--        android:id="@+id/expand"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_weight="2"-->
<!--        android:background="@android:drawable/arrow_down_float" />-->

        <Button
            android:id="@+id/start_pause"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_play"
            android:layout_marginBottom="16dp"/>


        <LinearLayout
                android:id="@+id/group_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/add_point"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_add"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/remove_point"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_remove"
                    android:layout_marginBottom="16dp"/>

    <!--            <Button-->
    <!--                android:id="@+id/macros"-->
    <!--                android:layout_width="match_parent"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:background="@android:drawable/star_on"/>-->
            <Button
                android:id="@+id/record_points_start_pause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_radio_button_off" />

            <Button
                android:id="@+id/setting_points"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_table_icon" />

            <Button
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_settings" />

        </LinearLayout>

        <Button
            android:id="@+id/close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_close" />

</LinearLayout>