<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adBanner"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="SMART_BANNER"
        app:adUnitId="@string/Banner_in_Setting_Unit_Ad_ID"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <fragment
                android:id="@+id/fragment_setting"
                class="com.askerweb.autoclickerreplay.fragment.SettingFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/xxmiddle_size"/>


            <Button
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_script"
                android:layout_marginRight="@dimen/xxlarge_size"
                android:layout_marginLeft="@dimen/xxlarge_size"
                android:layout_marginBottom="@dimen/xmiddle_size"/>

            <Button
                android:id="@+id/load_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/load_script"
                android:layout_marginRight="@dimen/xxlarge_size"
                android:layout_marginLeft="@dimen/xxlarge_size"
                android:layout_marginBottom="@dimen/xmiddle_size"/>
            <Button
                android:id="@+id/turn_off_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/turn_off_ad"
                android:layout_marginRight="@dimen/xxlarge_size"
                android:layout_marginLeft="@dimen/xxlarge_size"
                android:layout_marginBottom="@dimen/xmiddle_size"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>