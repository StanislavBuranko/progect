<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/paddingPage">

        <LinearLayout
            android:id="@+id/block_permission_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_element"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_overlay_permission"
                android:textSize="@dimen/xmiddle_text_size" />

            <Button
                android:id="@+id/btn_get_permission_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxsmall_size"
                android:text="@string/allow_permission"
                android:textSize="@dimen/xmiddle_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/block_pop_up_windows_miui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pop_up_description"
                android:textSize="@dimen/xmiddle_text_size" />

            <Button
                android:id="@+id/btn_pop_up_windows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxsmall_size"
                android:text="@string/add_service_accessibility"
                android:textSize="@dimen/xmiddle_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/block_accessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accessibility_service_description"
                android:textSize="@dimen/xmiddle_text_size" />

            <Button
                android:id="@+id/btn_add_accessibility_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxsmall_size"
                android:text="@string/add_service_accessibility"
                android:textSize="@dimen/xmiddle_text_size" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
