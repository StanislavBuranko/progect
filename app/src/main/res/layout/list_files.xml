<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:background="@drawable/draw_background_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/xxxsmall_size"
        android:paddingTop="@dimen/xsmall_size"
        android:paddingEnd="@dimen/xxxsmall_size"
        android:paddingBottom="@dimen/xsmall_size">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/xmiddle_text_size"
            android:textColor="@color/backgroundColor"
            android:layout_marginEnd="@dimen/xlarge_size"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.538"
            />

        <Button
            android:id="@+id/btn_delete"
            android:background="@drawable/ic_close"
            android:layout_width="@dimen/large_size"
            android:layout_height="@dimen/large_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xxxsmall_size"/>
</LinearLayout>
