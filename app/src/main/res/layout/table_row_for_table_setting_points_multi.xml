<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center">
        <Button
            android:id="@+id/butttonHideShowRow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:width="30dp"
            android:height="30dp"
            android:background="@drawable/ic_close_minimal"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"></Button>
    </LinearLayout>
    <EditText android:id="@+id/numberPoint" android:layout_column="1" android:inputType="number" />
    <TextView android:id="@+id/selectClass" android:layout_column="2"/>
    <EditText android:id="@+id/xPoint" android:layout_column="3" android:inputType="number" />
    <EditText android:id="@+id/yPoint" android:layout_column="4" android:inputType="number" />
    <EditText android:id="@+id/delayPoint" android:layout_column="5" android:inputType="number" />
    <EditText android:id="@+id/durationPoint" android:layout_column="6" android:inputType="number" />
    <EditText android:id="@+id/repeatPoint"  android:layout_column="7" android:inputType="number" />
    <EditText android:id="@+id/numbMultiPoint"  android:layout_column="8" android:inputType="number" />
</TableRow>