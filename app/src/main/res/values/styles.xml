<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:actionBarStyle">@style/GradientActionBar</item>
        <item name="actionBarStyle">@style/GradientActionBar</item>
        <item name="android:buttonStyle">@style/GradientButton</item>
        <item name="buttonStyle">@style/GradientButton</item>
        <item name="colorPrimaryDark">@color/blueHippie</item>
        <item name="colorControlActivated">@color/blueHippie</item>
        <item name="colorControlHighlight">#80659DD0</item>
        <item name="dialogTheme">@style/AppDialog</item>
        <item name="alertDialogTheme">@style/AppDialog</item>
        <item name="alertDialogStyle">@style/AppDialog</item>
        <item name="background">@color/backgroundColor</item>
        <item name="android:editTextStyle">@style/AppEditText</item>
        <item name="editTextStyle">@style/AppEditText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="GradientActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:titleTextAppearance">@android:color/white</item>
        <item name="android:background">@drawable/draw_gradient_bg</item>
        <item name="background">@drawable/draw_gradient_bg</item>
    </style>

    <style name="GradientButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/draw_btn</item>
        <item name="background">@drawable/draw_btn</item>
        <item name="android:paddingTop">@dimen/_4dp</item>
        <item name="android:paddingBottom">@dimen/_4dp</item>
        <item name="android:paddingLeft">@dimen/_8dp</item>
        <item name="android:paddingRight">@dimen/_8dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:paddingLeft">@dimen/_4dp</item>
        <item name="android:paddingRight">@dimen/_4dp</item>
        <item name="android:paddingTop">@dimen/_2dp</item>
        <item name="android:titleTextAppearance">@style/AppDialogTitle</item>
        <item name="android:windowTitleStyle">@style/AppDialogTitle</item>
        <item name="android:textColor">@color/blueDanube</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:editTextStyle">@style/AppEditText</item>
        <item name="editTextStyle">@style/AppEditText</item>
    </style>

    <style name="AppDialogGradient" parent="AppDialog">
        <item name="android:buttonStyle">@style/GradientButton</item>
        <item name="buttonStyle">@style/GradientButton</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="AppDialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">@dimen/_24sp</item>
    </style>

    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/blueDanube</item>
        <item name="android:textSize">@dimen/_24dp</item>
        <item name="backgroundTint">@color/blueDanube</item>
    </style>

</resources>
